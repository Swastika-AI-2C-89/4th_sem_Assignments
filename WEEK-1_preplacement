1)Finding maximum and minimum from a given array.
• C:-
#include<stdio.h>
int main()
{
   int arr= {10,256,8,57,2036};
   int max=0, min=arr[0], i=0, n=5;
   for (i=0;i<n;n++)
   {
      if (arr[i]>max)
         max=arr[i];
   }
   for (i=0;i<n;n++)
   {
      if (arr[i]<min)
         min=arr[i];
   }
   printf("Max= %d, Min=%d", max, min);
   return 0;
}
• Python:-
li= [10,8,57,2026,3]
max, nin=0,li[0]
for i in li:
   if i>max:
      max=i
for i in li:
   if i<min:
      min=i
print("Max= ", max,"Min= ", min)

2)Counting number odd and even numbers in a given array.
• C:-
#include<stdio.h>
int main()
{
   int arr= {10,256,8,57,2036};
   int eve=0, odd=0, i=0, n=5;
   for (i=0;i<n;n++)
   {
      if (arr[i]%2==0)
         eve++;
      else
         odd++;
   }
   printf("Even= %d, Odd= %d", eve, odd);
   return 0;
}
• Python:-
li= [10,8,57,2026,3]
eve, odd=0,0
for i in li:
   if i%2==0:
      eve+=1
   else:
      odd+=1
print("Even= ", eve,"Odd= ", odd)

3)Reverse an array.
• C:-
#include<stdio.h>
int main()
{
   int arr= {10,45,6,78,90};
   int n=5, i=0;
   int arr2[n];
   for(i=0;i<n;i++)
   {
      arr2[i]= arr[n-i-1];
   }
   printf("Reversed array: ");
   for(i=0;i<n;i++)
   {
      printf("%d ", arr2[i]);
   }
   return 0;
}
• Python:-
arr=[10,6,45,28,6798054321]
print("Reversed array: ", arr[::-1])

4)Check if array is sorted.
• C:-
#include <stdio.h>
int main() {
    int n,flag=1;
    scanf("%d",&n);
    int arr[n];
    for(int i=0;i<n;i++)
        scanf("%d",&arr[i]);
    for(int i=0;i<n-1;i++) {
        if(arr[i]>arr[i+1]) {
            flag=0;
            break;
        }
    }
    if(flag)
        printf("True");
    else
        printf("False");
    return 0;
}
• Python:-
arr=[1,2,3,5]
flag=True
for i in range(len(arr)-1):
    if arr[i]>arr[i+1]:
        flag=False
        break
print(flag)

5)Sum of elements at even indices.
• C:-
#include <stdio.h>
int main() {
    int n,sum=0;
    scanf("%d",&n);
    int arr[n];
    for(int i=0;i<n;i++)
        scanf("%d",&arr[i]);
    for(int i=0;i<n;i+=2)
        sum+=arr[i];
    printf("%d",sum);
    return 0;
}
• Python:-
arr=[10,20,30,40,50]
sum=0
for i in range(0,len(arr),2):
    sum+=arr[i]
print(sum)

6)Counting occurrence of each element.
• C:-
#include <stdio.h>
int main() {
    int n,x,count=0;
    scanf("%d",&n);
    int arr[n];
    for(int i=0;i<n;i++)
        scanf("%d",&arr[i]);
    scanf("%d",&x);
    for(int i=0;i<n;i++) {
        if(arr[i]==x)
            count++;
    }
    printf("%d",count);
    return 0;
}
• Python:-
arr=[1,2,3,2,2,4]
x=2
count=0
for i in arr:
    if i==x:
        count+=1
print(count)
